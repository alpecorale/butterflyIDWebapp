<!DOCTYPE html>
<html lang="en">
<%- include("./partials/head.ejs") %>

<body>
<script src="./js/scripts.js" defer></script>
<%- include("./partials/nav.ejs") %>

<div>
    <form>
        <label for="colorCheckOrange">Orange</label>
        <input type="checkbox" id="colorCheckOrange" value="Orange">
        <label for="colorCheckWhite">White</label>
        <input type="checkbox" id="colorCheckWhite" value="White">
        <label for="colorCheckBrown">Brown</label>
        <input type="checkbox" id="colorCheckBrown" value="Brown">
        <input onclick="applyFilter()" id="filterSubmit" type="submit">
    </form>
</div>

<div>
    <table class="table" id="buttTable">
        <% if (allEntries.length > 0) { %>
            <th>Name</th>
            <th>Family</th>
            <th>Color</th>
            <% allEntries.forEach(buttEntry => { %>
            <tr id=<%=buttEntry._id%>>
                <td><%= buttEntry.name%></td>
                <td><%= buttEntry.family%></td>
                <td><%= buttEntry.color%></td>
            </tr>
            <% }) %>
        <% } %>
    </table>
</div>
<div>
    <form id="reviewForm">
        <input  id="name" type="text">
        <input  id="family" type="text">
        <input  id="color" type="text">
        <input onclick="submitHandler()" id="reviewSubmit" type="submit">
    </form>
</div>

<%- include("./partials/footer.ejs") %>
</body>
</html>
